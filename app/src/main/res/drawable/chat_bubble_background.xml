<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color of the chat bubble -->
    <solid android:color="#E0E0E0"/> <!-- You can change this color based on your design -->

    <!-- Add padding inside the bubble -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp" />

    <!-- Rounded corners of the bubble -->
    <corners android:radius="12dp"/>

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#B0BEC5" /> <!-- This can be removed or adjusted -->
</shape>
