<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color for user's message -->
    <solid android:color="#BBDEFB"/> <!-- Light Blue -->

    <!-- Add padding inside the bubble -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp" />

    <!-- Rounded corners, adjust if needed -->
    <corners android:topRightRadius="16dp"
        android:topLeftRadius="16dp"
        android:bottomLeftRadius="16dp"
        android:bottomRightRadius="4dp" /> <!-- User messages are usually aligned to the right -->

</shape>
