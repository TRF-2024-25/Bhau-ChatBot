<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color for bot's message -->
    <solid android:color="#ECEFF1"/> <!-- Light Gray -->

    <!-- Add padding inside the bubble -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp" />

    <!-- Rounded corners, adjust if needed -->
    <corners android:topRightRadius="16dp"
        android:topLeftRadius="16dp"
        android:bottomRightRadius="16dp"
        android:bottomLeftRadius="4dp" /> <!-- Bot messages are usually aligned to the left -->

</shape>
